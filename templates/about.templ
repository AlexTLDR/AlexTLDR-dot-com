package templates

templ About() {
	<!-- About Section -->
	<section id="about" class="min-h-screen bg-base-100">
		<div class="hero min-h-screen">
			<div class="hero-content text-center">
				<div class="max-w-4xl">
					<h1 class="text-5xl font-bold text-primary mb-8">Hi there! I'm Alex</h1>
					<p class="text-xl mb-6">
						A Full Stack Developer with a love for programming, especially in Go. I'm also passionate about music, road trips, and bikes.
					</p>
					<div class="divider">Code by day, cartoons by night.</div>
					<div class="text-left max-w-3xl mx-auto space-y-4">
						<p class="text-lg">
							I'm a DevOps engineer at Sopheon, building projects with Go for the backend and frameworks
							like Tailwind or Bootstrap for the frontend.
						</p>
						<p class="text-lg">
							A lifelong learner with a slight coding addiction (working on it!),
							I lead the Stuttgart Gophers meetup, where we regularly discuss and learn about Golang
							and organize workshops and talks 👨🏼‍💻💻👨‍💻.
						</p>
					</div>
					<div class="mt-8">
						<a href="#cv" class="btn btn-primary btn-lg">Explore My Work</a>
					</div>
				</div>
			</div>
		</div>
	</section>
}

package templates

templ Portfolio() {
	<!-- Portfolio Section -->
	<section id="portfolio" class="min-h-screen bg-base-100 py-16">
		<div class="container mx-auto px-4">
			<!-- Header -->
			<div class="text-center mb-16">
				<h1 class="text-5xl font-bold text-primary mb-6">Portfolio</h1>
				<p class="text-lg text-base-content">Projects I've worked on</p>
			</div>
			<!-- Projects Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Pizzeria -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/pizzeria.png" alt="Pizzeria" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">Pizzeria</h2>
						<p class="text-sm">A demo website for my local pizzeria with menu management and admin dashboard. Uses Google OAuth for admin authentication.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, SQLite, HTML, TailwindCSS, Docker, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://pizzeria.alextldr.com/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/AlexTLDR/pizzeria" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Interpretor -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/interpretor.png" alt="Interpretor" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">Interpretor</h2>
						<p class="text-sm">A translation tool to help with German terms. Utilizes Groq's OpenAI-compatible API for translations.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, Groq, HTML, TailwindCSS, Docker, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://interpretor.alextldr.com/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/AlexTLDR/interpretor" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Blog -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/blog.png" alt="Blog" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">blog.alextldr.com</h2>
						<p class="text-sm">My personal blog where I share technical insights and learning experiences. Writing helps me discover new concepts.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Hugo, GitHub Actions
						</div>
						<div class="card-actions justify-end">
							<a href="https://blog.alextldr.com/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/AlexTLDR/blog.alextldr.com" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Stuttgart Gophers -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/stuttgart-gophers-home-page.png" alt="Stuttgart Gophers" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">Stuttgart Gophers</h2>
						<p class="text-sm">The website of the Stuttgart Gophers meetup. Provides information about the meetup and upcoming events.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, HTML, TailwindCSS, Docker, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://stuttgart-gophers.de/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/Stuttgart-Gophers/StuttgartGophers" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Original Website -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/v1.png" alt="alextldr.com initial version" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">alextldr.com initial version</h2>
						<p class="text-sm">Previous version</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, HTML, Bootstrap, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://v1.alextldr.com/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/AlexTLDR/AlexTLDR-dot-com" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
							<a href="https://github.com/AlexTLDR/AlexTLDR-dot-com/tree/v1" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Fotohive -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/fotohive.png" alt="Fotohive" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">Fotohive</h2>
						<p class="text-sm">A photo-sharing app with user profiles, galleries, and photo management. Includes password reset functionality.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, PostgreSQL, HTML, TailwindCSS, Docker, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://fotohive.alextldr.com/" target="_blank" class="btn btn-primary">View Project</a>
							<a href="https://github.com/AlexTLDR/WebDev" target="_blank" class="btn btn-outline btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- Raffle -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/raffle.png" alt="Raffle" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">Raffle</h2>
						<p class="text-sm">A helper app for Stuttgart Gophers meetups to raffle off prizes. Reads from Google Sheets and randomly selects winners.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, Cloud Hosting
						</div>
						<div class="card-actions justify-end">
							<a href="https://github.com/AlexTLDR/raffle" target="_blank" class="btn btn-primary">GitHub</a>
						</div>
					</div>
				</div>
				<!-- IMDB -->
				<div class="card bg-base-200 shadow-lg">
					<figure class="px-4 pt-4">
						<img src="/static/portfolio/imdb.png" alt="IMDB" class="rounded-lg w-full h-48 object-cover"/>
					</figure>
					<div class="card-body">
						<h2 class="card-title text-success">IMDB</h2>
						<p class="text-sm">A GraphQL application for querying movies and actors. Features three versions using different databases.</p>
						<div class="text-xs text-base-content/70 mb-4">
							<span class="font-semibold">Tech Stack:</span> Go, GraphQL, MySQL/MongoDB/Neo4j
						</div>
						<div class="card-actions justify-end">
							<a href="https://github.com/AlexTLDR/imdb" target="_blank" class="btn btn-primary">GitHub</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}
